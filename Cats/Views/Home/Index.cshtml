@model IEnumerable<Cat>
@{
     
   ViewData["Title"] = "Каталог котиков";
}
<!DOCTYPE html>

<html>
<head>
    <title>Меню котиковв</title>

</head>
<body>
    <h3> Выбор Котиков</h3>
    <table class="table-condensed">
        <tr>
            <td>Кличка</td>
            <td>Порода</td>
            <td>Цена</td>
            <td></td>
        </tr>

        @foreach (var cat in Model)
        {
    <tr>
        <td>@cat.Name</td>
        <td>@cat.Breed</td>
        <td>@cat.Price</td>

        <td><a asp-action="Edit" asp-controller="Home" asp-route-id="@cat.Id">Редактировать</a></td>

        <td><a asp-action="Delete" asp-controller="Home" asp-route-id="@cat.Id" >Удалить</a></td>
        
        <td><a asp-action="Details" asp-controller="Home" asp-route-id="@cat.Id">Информация</a></td>

    </tr>
        }

    </table>
    <style>
        p {
            margin-top: 10px;
        }
    </style>
    <p><hr /></p>
         <a href="~/Home/Create" class="Create">Добавить котика</a>
        
       


</body>
</html>
