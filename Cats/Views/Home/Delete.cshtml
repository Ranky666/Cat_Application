@model Cats.Models.Cat
@{
    ViewBag.Title = "Удаление котиков";
}
<!DOCTYPE html>
<html>
<head>
    <title>Меню котиковв</title>
</head>
<body>
    
        <div>
            <dl class="dl-horizontal">
                <dt>Кличка</dt>
                <dd>
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt>Порода</dt>
                <dd>
                    @Html.DisplayFor(model => model.Breed)
                </dd>
                <dt>Цена</dt>
                <dd>
                    @Html.DisplayFor(model => model.Price)
                </dd>
            </dl>
  
    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
    </div>
  
</body>
</html>

